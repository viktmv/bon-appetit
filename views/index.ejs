<body>
  <!-- NAV BAR -->
  <% include ./partials/_header %>

    <!-- HEADER OF WEBSITE  -->
    <div class='jumbotron jumbotron-fluid center' id='header'>
      <div class='container-fluid'>
        <h1>A smile in every scoop.</h1>
        <% if (user) { %>
          <p><a href='/users/menu' class='btn btn-success btn-lg'>Our Menu</a></p>
          <p><i>From Toronto's Finest Icecream Parlour</i></p>
        <% } else { %>
          <p> <img src="images/blue_welcome.svg" width="300"></p>
      </div>
      <div class="ready-links">

        <p class='subtitle'>Ready to treat yourself?<br></p>
        <p class='subtitle'><a href='/login'><span class='main-links'>Login</span></a> or <a href='/register'><span class='main-links'>Register</span></a></p>

      </div>
      <% } %>
    </div>

    <video poster="https://cdn.dribbble.com/users/849113/screenshots/2668825/icecream.gif" id="bgvid" playsinline autoplay muted loop>
